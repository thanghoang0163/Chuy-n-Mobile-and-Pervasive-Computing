            <Button x:ConnectionId='7' x:Name="back_btn" Content="Prev" Margin="406,167,0,0" VerticalAlignment="Top" Height="76" Width="196" FontSize="30"                       />
            <Button x:ConnectionId='8' x:Name="next_btn" Content="Next" Margin="726,167,0,0" VerticalAlignment="Top" Height="76" Width="196" FontSize="30"                       />
