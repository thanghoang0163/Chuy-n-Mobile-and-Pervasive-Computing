<Page
    x:Class="BMICaculation.Caculator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BMICaculation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="LightBlue">
        <TextBlock x:ConnectionId='2' x:Name="Introduce" Text="BMI" FontWeight="Light" FontSize="48" HorizontalAlignment="Center" Foreground="Green" Margin="0,0,0,704" />
        <TextBlock x:ConnectionId='3' x:Name="titleHeight" Text="Điền chiều cao của bạn (VD: Bạn 1m7 thì nhập 1.7)" HorizontalAlignment="Left" TextWrapping="Wrap" Margin="16,84,0,657" Foreground="red" RenderTransformOrigin="0.482,2.474"/>
        <TextBox x:ConnectionId='4' x:Name="textHeight" HorizontalAlignment="Left" TextWrapping="Wrap" PlaceholderText="Nhập chiều cao" Width="331" FontSize="40" FontStyle="Italic" TextAlignment="Left" Padding="0,0,10,0" Margin="16,129,0,570" />
        <TextBlock x:ConnectionId='5' x:Name="titleWeight" Text="Điền cân nặng của bạn (VD: Bạn 70kg thì nhập 70)" HorizontalAlignment="Left" TextWrapping="Wrap" Margin="16,228,0,513" Foreground="red" RenderTransformOrigin="0.482,2.474"/>
        <TextBox x:ConnectionId='6' x:Name="textWeight" HorizontalAlignment="Left" TextWrapping="Wrap" PlaceholderText="Nhập cân nặng" Width="331" FontSize="40" FontStyle="Italic" TextAlignment="Left" Padding="0,0,10,0" Margin="14,280,0,419" />
        <TextBlock x:ConnectionId='7' x:Name="Gender" Text="Giới tính" HorizontalAlignment="Left" TextWrapping="Wrap" Margin="16,396,0,345" Foreground="red" RenderTransformOrigin="0.482,2.474"/>
        <Button x:ConnectionId='8' x:Name="btnResult" Content="Kết quả" Margin="0,469,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Height="63" Width="164" Foreground="Green" FontSize="35" FontWeight="Bold"                        />
        <TextBlock x:ConnectionId='9' x:Name="textNote" Text="" HorizontalAlignment="Left" TextWrapping="Wrap" Margin="16,628,0,113" Foreground="red" RenderTransformOrigin="0.482,2.474"/>
        <RadioButton x:ConnectionId='10' x:Name="rbtnMale" Content="Nam" Margin="134,389,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.028,-0.269"/>
        <RadioButton x:ConnectionId='11' x:Name="rbtnFemale" Content="Nữ" Margin="254,390,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.028,-0.269"/>
    </Grid>
</Page>

